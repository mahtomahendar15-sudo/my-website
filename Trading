  <!-- ----------------- SCRIPTS: small helpers + mock chart ----------------- -->
  <script>
    // Smooth scroll for anchors
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', function(e){
        const href = this.getAttribute('href');
        if(href.length>1){
          e.preventDefault();
          const el = document.querySelector(href);
          if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
        }
      });
    });

    // Subscribe hero (demo)
    function subscribeHero(){
      const e = document.getElementById('heroEmail').value.trim();
      if(!e || !e.includes('@')){ alert('Sahi email daal bhai'); return; }
      alert('Thanks! Free guide will be sent to: ' + e + '\\n(Setup real mail later)');
    }
    function subscribeContact(){
      const e = document.getElementById('contactEmail').value.trim();
      if(!e || !e.includes('@')){ alert('Sahi email daal bhai'); return; }
      alert('Thanks! We will contact: ' + e);
    }

    // Simple mock candle-like chart (canvas) — purely illustrative
    (function(){
      const c = document.getElementById('miniChart');
      if(!c) return;
      const ctx = c.getContext('2d');
      // Resize canvas for high DPI
      function resize(){
        const w = c.clientWidth;
        const h = 220;
        c.width = w * devicePixelRatio;
        c.height = h * devicePixelRatio;
        ctx.setTransform(devicePixelRatio,0,0,devicePixelRatio,0,0);
        draw();
      }
      window.addEventListener('resize', resize);
      // Generate sample price series
      const points = [];
      let p = 100;
      for(let i=0;i<60;i++){
        p += (Math.random()-0.45)*(Math.random()*8);
        points.push(Math.max(20, p));
      }
      function draw(){
        const W = c.clientWidth;
        const H = 220;
        ctx.clearRect(0,0,W,H);
        // background grid
        ctx.fillStyle = '#041028';
        ctx.fillRect(0,0,W,H);
        ctx.strokeStyle = 'rgba(255,255,255,0.03)';
        ctx.lineWidth = 1;
        for(let y=0;y<H;y+=30){
          ctx.beginPath();
          ctx.moveTo(0,y);
          ctx.lineTo(W,y);
          ctx.stroke();
        }
        // draw price line
        ctx.beginPath();
        ctx.lineWidth = 2;
        ctx.strokeStyle = 'rgba(96,165,250,0.95)';
        for(let i=0;i<points.length;i++){
          const x = (i/(points.length-1))*(W-20)+10;
          const y = H - ((points[i]-20)/(160))*(H-20) -10;
          if(i===0) ctx.moveTo(x,y); else ctx.lineTo(x,y);
        }
        ctx.stroke();
        // fill gradient under line
        const grad = ctx.createLinearGradient(0,0,0,H);
        grad.addColorStop(0,'rgba(96,165,250,0.12)');
        grad.addColorStop(1,'rgba(2,6,23,0.02)');
        ctx.lineTo(W-10,H);
        ctx.lineTo(10,H);
        ctx.closePath();
        ctx.fillStyle = grad;
        ctx.fill();
        // current price box
        const last = points[points.length-1];
        ctx.fillStyle = '#062030';
        ctx.fillRect(W-120,10,110,30);
        ctx.fillStyle = '#9ae6b4';
        ctx.font = '16px system-ui';
        ctx.fillText('Price: ' + Math.round(last*100)/100, W-108, 30);
      }
      resize();
    })();

    // small fade-up animation trigger
    document.addEventListener('DOMContentLoaded', function(){
      const items = document.querySelectorAll('.fade-up');
      items.forEach((el,i)=>{
        setTimeout(()=> el.style.animation = 'fadeUp .6s forwards', i*80 + 100);
      });
    });
  </script>
